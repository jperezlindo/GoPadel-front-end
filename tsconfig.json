{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,

    "jsx": "preserve",
    "types": ["vite/client", "node"],

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["src", "env.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
